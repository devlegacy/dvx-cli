{
  "name": "@devexteam/dvx-cli",
  "version": "2.0.4",
  "description": "CLI that encapsulates utilities for image processing and assets in frontend development.",
  "license": "MIT",
  "main": "bin/index.js",
  "bin": {
    "dvx": "bin/index.js"
  },
  "scripts": {
    "prebuild": "npm run clean:build",
    "build": "npm run tsc:build",
    "tsc:watch": "npm run clean:build && tsnd --watch -r ts-node/register/transpile-only -r tsconfig-paths/register -- ./src/index.ts",
    "tsc:build": "tsc -p ./src/tsconfig.json && resolve-tspaths -p ./src/tsconfig.json -s ./src -o ./bin",
    "clean:build": "rm -f tsconfig.build.tsbuildinfo && rm -Rf ./bin/* ; exit 0",
    "jest:init": "jest --init",
    "jest:watch": "jest --watchAll",
    "test": "jest --runInBand --detectOpenHandles",
    "webpack:build": "npm run clean:build && webpack --stats-error-details=true --config webpack.config.js --mode=production && echo #!/usr/bin/env node > dist/bin/www && cat ./dist/bin/www.js >> dist/bin/www && rm ./dist/bin/www.js",
    "package:update": "ncu -u && npm i --legacy-peer-deps && npm audit fix --legacy-peer-deps"
  },
  "keywords": [
    "Devexteam",
    "cli",
    "minify",
    "tools",
    "frontend"
  ],
  "files": [
    "assets/icons",
    "bin",
    "README.md"
  ],
  "directories": {
    "bin": "bin"
  },
  "author": "Samuel R. <samuel@devexteam.com>",
  "private": false,
  "devDependencies": {
    "@types/fs-extra": "^11.0.1",
    "@types/htmlhint": "^1.1.2",
    "@types/imagemin": "^8.0.1",
    "@types/imagemin-jpegtran": "^5.0.1",
    "@types/imagemin-mozjpeg": "^8.0.1",
    "@types/imagemin-svgo": "^10.0.2",
    "@types/imagemin-zopfli": "^7.0.1",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@types/node-notifier": "^8.0.2",
    "@types/sharp": "^0.31.1",
    "@types/shelljs": "^0.8.11",
    "@types/yargs": "^17.0.24",
    "jest": "^29.5.0",
    "resolve-tspaths": "^0.8.8",
    "string-replace-loader": "^3.1.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "tsconfig-paths-webpack-plugin": "^4.0.1",
    "typescript": "^5.0.3",
    "webpack": "^5.77.0",
    "webpack-cli": "^5.0.1",
    "webpack-merge": "^5.8.0",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {
    "@squoosh/lib": "^0.5.3",
    "beeper": "^3.0.0",
    "fs-extra": "^11.1.1",
    "glob": "^9.3.4",
    "htmlhint": "^1.1.4",
    "htmlhint-stylish": "^1.0.3",
    "imagemin": "^8.0.1",
    "imagemin-giflossy": "^5.1.10",
    "imagemin-jpegtran": "^7.0.0",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-svgo": "^10.0.1",
    "imagemin-webp": "^8.0.0",
    "imagemin-zopfli": "^7.0.0",
    "node-notifier": "^10.0.1",
    "sharp": "^0.32.0",
    "shelljs": "^0.8.5",
    "tslib": "^2.5.0",
    "yargs": "^17.7.1"
  },
  "engines": {
    "node": ">=12.18.3 <=18.8.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devlegacy/dvx-cli.git"
  },
  "bugs": {
    "url": "https://github.com/devlegacy/dvx-cli/issues"
  },
  "homepage": "https://github.com/devlegacy/dvx-cli#readme"
}
