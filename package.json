{
  "name": "@devexteam/dvx-cli",
  "version": "2.0.0",
  "description": "CLI that encapsulates utilities for image processing and assets in frontend development.",
  "license": "MIT",
  "main": "bin/index.js",
  "bin": {
    "dvx": "bin/index.js"
  },
  "scripts": {
    "jest:init": "jest --init",
    "jest:watch": "jest --watchAll",
    "test": "jest --runInBand --detectOpenHandles",
    "tsc:watch": "npm run build:clean && tsc --watch --pretty",
    "tsc:build": "npm run build:clean && tsc --build --pretty",
    "build:clean": "rm -Rf ./bin/* ; exit 0",
    "webpack:build": "npm run build:clean && webpack --stats-error-details=true --config webpack.config.js --mode=production && echo #!/usr/bin/env node > dist/bin/www && cat ./dist/bin/www.js >> dist/bin/www && rm ./dist/bin/www.js",
    "package:update": "ncu -u && npm i --legacy-peer-deps && npm audit fix --legacy-peer-deps"
  },
  "keywords": [
    "Devexteam",
    "cli",
    "minify",
    "tools",
    "frontend"
  ],
  "files": [
    "README.MD"
  ],
  "directories": {
    "bin": "bin"
  },
  "author": "Samuel R. <samuel@devexteam.com>",
  "private": true,
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/htmlhint": "^0.9.3",
    "@types/imagemin": "^8.0.0",
    "@types/imagemin-jpegtran": "^5.0.1",
    "@types/imagemin-mozjpeg": "^8.0.1",
    "@types/imagemin-svgo": "^10.0.0",
    "@types/imagemin-zopfli": "^7.0.1",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.13",
    "@types/node-notifier": "^8.0.1",
    "@types/sharp": "^0.29.4",
    "@types/shelljs": "^0.8.9",
    "@types/yargs": "^17.0.7",
    "jest": "^27.4.5",
    "string-replace-loader": "^3.1.0",
    "ts-jest": "^27.1.1",
    "ts-loader": "^9.2.6",
    "tsconfig-paths": "^3.12.0",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "typescript": "^4.5.4",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1",
    "webpack-merge": "^5.8.0",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {
    "beeper": "^3.0.0",
    "fs-extra": "^10.0.0",
    "glob": "^7.2.0",
    "htmlhint": "^1.0.0",
    "htmlhint-stylish": "^1.0.3",
    "imagemin": "^8.0.1",
    "imagemin-giflossy": "^5.1.10",
    "imagemin-jpegtran": "^7.0.0",
    "imagemin-mozjpeg": "^9.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-svgo": "^10.0.0",
    "imagemin-webp": "^6.0.0",
    "imagemin-zopfli": "^7.0.0",
    "node-notifier": "^10.0.0",
    "sharp": "^0.29.3",
    "shelljs": "^0.8.4",
    "yargs": "^17.3.0"
  },
  "engines": {
    "node": ">=12.18.3 <=16.13.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devlegacy/dvx-cli.git"
  },
  "bugs": {
    "url": "https://github.com/devlegacy/dvx-cli/issues"
  },
  "homepage": "https://github.com/devlegacy/dvx-cli#readme"
}
